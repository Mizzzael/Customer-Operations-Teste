.product
    padding-bottom 1em
    padding-left 1em
    padding-right 1em
    &_image
        width 95%
        height 210px
        display flex
        align-items center
        justify-content center
        & img
            max-width 99%
            max-height 200px
    &_name
        font-size 1.1em
        padding 0 0.5%
        padding 0.32em 0
    &_description
        font-size 0.8em
        padding 0.5em 0

    &_small-val
        font-size 0.9em
        padding 0.5em 0
        display block
    &_price
        font-size 1.3em
        font-weight bold
        padding 0.25em 0
